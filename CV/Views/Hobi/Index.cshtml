@using CV.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body class="hold-transition sidebar-mini mt-5">
    <div class="wrapper mt-3">
        <!-- Content Wrapper. Contains page content -->
        <!-- Main content -->
        <section class="content  ">

            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Hobilerim</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-0">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Aciklama1</th>
                                            <th>Aciklama2</th>
    
                                            <th style="width: 165px">İşlemler</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Aciklama1</td>
                                            <td>@item.Aciklama2</td>
                                            <td>
                                                <a href="/Hobi/HobiSil/@item.ID"
                                                   class="btn btn-danger">Sil</a>
                                                <a href="/Hobi/HobiDuzenle/@item.ID"
                                                   class="btn btn-info">Duzenle</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <a href="/Hobi/HobiEkle/" class="btn btn-primary mt-3 ml-2 mb-3">Yeni Hobi Ekle</a>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.row -->
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->


    </div>

</body>
</html>

