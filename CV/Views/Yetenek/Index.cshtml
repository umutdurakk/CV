@using CV.Models.Entity
@model List<TblYetenekler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body class="hold-transition sidebar-mini">
    <div class="wrapper">       
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YetenekEkle/" class="btn btn-primary mb-3 ml-2">Yeni Yetenek Ekle</a>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th style="width: 100px">Yetenek</th>
                                            <th style="width: 300px">Gösterim</th>
                                            <th style="width: 10px">Derece</th>
                                            <th style="width: 150px">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {


                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Yetenek</td>


                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="progress-bar progress-bar-warning" style="width:@item.Derece%;color:#ffd800;background-color:#ffd800;"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-warning">@item.Derece%</span></td>
                                                <td align="center">
                                                    <a href="/Yetenek/YetenekSil/@item.ID"
                                                       class="btn btn-danger"><i class="fa fa-trash mr-1"></i>Sil</a>
                                                    <a href="/Yetenek/YetenekDuzenle/@item.ID"
                                                       class="btn btn-info"><i class="fa fa-pen mr-1"></i>Düzenle</a>
                                                </td>
                                            </tr>
                                        }



                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>


